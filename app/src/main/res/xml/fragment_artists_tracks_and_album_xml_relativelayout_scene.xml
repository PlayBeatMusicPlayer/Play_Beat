<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:layoutDuringTransition="honorRequest"
        motion:motionInterpolator="linear"
        motion:duration="1000">
        <KeyFrameSet>

            <KeyAttribute
                motion:motionTarget="@+id/rlContainer"
                motion:framePosition="65"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@+id/artisNameTVToolbar"
                motion:framePosition="0"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@+id/artisNameTVToolbar"
                motion:framePosition="40"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@+id/artisNameTVToolbar"
                motion:framePosition="20"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@+id/playAllToolbar"
                motion:framePosition="0"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@+id/playAllToolbar"
                motion:framePosition="20"
                android:alpha="0" />
            <KeyAttribute
                motion:motionTarget="@+id/playAllToolbar"
                motion:framePosition="40"
                android:alpha="0" />
        </KeyFrameSet>
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:dragScale="1"
            motion:moveWhenScrollAtTop="true"
            motion:onTouchUp="stop"
            motion:touchAnchorId="@+id/rv_fav_songs"
            motion:touchAnchorSide="top" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/bottomShadowIV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/coverArtistImage" />
        <Constraint
            android:id="@+id/albumTextTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.043"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/arrowBackIV"
            android:layout_marginStart="5dp" />
        <Constraint
            android:id="@+id/trackTextTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="12dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.043"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/rvAlbums" />
        <Constraint
            android:id="@+id/artisNameTVToolbar"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="45dp"
            android:visibility="invisible"
            motion:layout_constraintEnd_toEndOf="@id/playAllToolbar"
            motion:layout_constraintHorizontal_bias="0.087"
            motion:layout_constraintStart_toEndOf="@id/arrowBackIV"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/playAllToolbar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="0dp"
            android:visibility="invisible"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.927"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/rlContainer"
            motion:layout_constraintBottom_toBottomOf="@+id/coverArtistImage"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_constraintTop_toBottomOf="@id/trackTextTV"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_goneMarginTop="200dp"
            android:layout_marginTop="415dp"
            android:id="@+id/rv_fav_songs"
            android:layout_marginStart="0dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/bottomShadowIV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/topViewIV" />
        <Constraint
            android:id="@+id/coverArtistImage"
            android:layout_width="245dp"
            android:layout_height="245dp"
            android:layout_marginTop="-180dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/topViewIV"
            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:layout_marginTop="-180dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/artisNameTV"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="175dp"
            android:visibility="invisible"
            motion:layout_constraintBottom_toTopOf="@+id/TracksAndAlbum"
            motion:layout_constraintEnd_toStartOf="@id/playAll"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/playAll"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="175dp"
            android:layout_marginEnd="20dp"
            android:visibility="visible"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.927"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/albumTextTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.043"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/arrowBackIV"
            android:layout_marginStart="5dp" />
        <Constraint
            android:id="@+id/trackTextTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="12dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.043"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/rvAlbums" />
        <Constraint
            android:id="@+id/TracksAndAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="25dp"
            android:visibility="invisible"
            motion:layout_constraintBottom_toTopOf="@+id/albumTextTV"
            motion:layout_constraintEnd_toStartOf="@+id/playAll"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/rlContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-100dp"
            motion:layout_constraintBottom_toBottomOf="@+id/coverArtistImage"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_constraintTop_toBottomOf="@id/trackTextTV"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_goneMarginTop="200dp"
            android:layout_marginTop="265dp"
            android:id="@+id/rv_fav_songs" />


    </ConstraintSet>
</MotionScene>