<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/artisNameTVToolbar"
               motion:framePosition="0"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/artisNameTVToolbar"
               motion:framePosition="62"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/playAllToolbar"
               motion:framePosition="0"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/playAllToolbar"
               motion:framePosition="0"
               android:alpha="0.5" />
           <KeyAttribute
               motion:motionTarget="@+id/playAllToolbar"
               motion:framePosition="61"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/playAllToolbar"
               motion:framePosition="92"
               android:alpha="0.5" />
       </KeyFrameSet>
        <OnSwipe
            motion:touchAnchorId="@+id/rvTracks"
            motion:touchAnchorSide="bottom" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/artisNameTVToolbar"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/arrowBackIV"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintHorizontal_bias="0.087"
            android:layout_marginTop="45dp"
            android:alpha="0" />
        <Constraint
            android:id="@+id/playAllToolbar"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            motion:layout_constraintHorizontal_bias="0.927"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="43dp"
            android:alpha="0" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_marginTop="175dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="260dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:id="@+id/artisNameTV"
            motion:layout_constraintEnd_toStartOf="@+id/playAll"
            motion:layout_constraintHorizontal_bias="0.0" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="260dp"
            motion:layout_constraintTop_toBottomOf="@+id/artisNameTV"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:id="@+id/TracksAndAlbum"
            motion:layout_constraintEnd_toStartOf="@+id/playAll"
            motion:layout_constraintHorizontal_bias="0.0" />
        <Constraint
            android:id="@+id/topViewIV"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="245dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/coverArtistImage"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="245dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp" />
        <Constraint
            android:id="@+id/bottomShadowIV"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/coverArtistImage"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="245dp" />


    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/playAll"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="45dp"
            android:layout_height="45dp"
            motion:layout_constraintHorizontal_bias="0.927"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="140dp"
            android:alpha="0" />
        <Constraint
            android:id="@+id/artisNameTV"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="140dp"
            android:alpha="0"
            motion:layout_constraintEnd_toStartOf="@+id/playAll"
            motion:layout_constraintHorizontal_bias="0.0" />
        <Constraint
            android:id="@+id/TracksAndAlbum"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/artisNameTV"
            android:layout_marginStart="20dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="0"
            motion:layout_constraintEnd_toStartOf="@+id/playAll"
            motion:layout_constraintHorizontal_bias="0.0" />
        <Constraint
            android:id="@+id/coverArtistImage"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="0"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp" />
        <Constraint
            android:id="@+id/bottomShadowIV"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/coverArtistImage"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="0dp" />
        <Constraint
            android:id="@+id/topViewIV"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="0" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/coverArtistImage"
            android:layout_marginStart="3dp"
            motion:layout_constraintHorizontal_bias="0.044"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/albumTextTV"
            android:layout_marginTop="40dp" />
        <Constraint
            android:id="@+id/playAllToolbar"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            motion:layout_constraintHorizontal_bias="0.927"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="43dp" />
    </ConstraintSet>
</MotionScene>