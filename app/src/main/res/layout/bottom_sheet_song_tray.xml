<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlParentBG"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_theme_gradient_background">

    <ImageView
        android:id="@+id/fullScreenBG"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_theme_color"
        android:contentDescription="@null"
        android:src="@drawable/gradient_background_bottom_shadow"
        android:visibility="gone" />

    <!-- full screen blurred img-->
    <ImageView
        android:id="@+id/fullScreenBlurredAlbumArt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:contentDescription="@null" />

    <!--top shadow -->
    <!-- <ImageView
         android:layout_width="match_parent"
         android:layout_height="100dp"
         android:alpha="0.5"
         android:contentDescription="@null"
         android:src="@drawable/gradient_background_top_shadow" />-->

    <!--toolbar-->
    <RelativeLayout
        android:id="@+id/rlToolbar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/blurImgToolbar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            android:src="@drawable/curved_all_edges" />

        <ImageView
            android:id="@+id/closeSheetIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_close_white" />

        <!-- <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
             android:fontFamily="@font/segoe_ui"
             android:shadowDx="0.0"
             android:shadowDy="0.0"
             android:shadowRadius="2"
             android:text="Now Playing"
             android:textColor="@color/white"
             android:textSize="17sp"
             android:textStyle="bold" />-->

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rlControlSong">

        <ImageView
            android:id="@+id/nowPlayingAlbumArtIV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="120dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/spydi" />

        <ImageView
            android:id="@+id/albumArtBottomGradient"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/albumArtTopGradient"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignTop="@id/nowPlayingAlbumArtIV"
            android:contentDescription="@null" />

    </RelativeLayout>


    <!-- <ImageView
         android:id="@+id/topPart"
         android:layout_width="match_parent"
         android:layout_height="150dp"
         android:alpha="0.5" />-->

    <!--bottom shadow-->
    <!--    <ImageView
            android:id="@+id/bottomGradientIV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp"
            android:contentDescription="@null"
            android:src="@drawable/gradient_background_bottom_shadow" />-->
    <RelativeLayout
        android:id="@+id/rlControlSong"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_above="@+id/bottomView"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="0dp">

        <ImageView
            android:id="@+id/controllingSongIVBG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:background="@drawable/curved_all_edges" />

        <LinearLayout
            android:id="@+id/llSongNameAndArtistsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/favouriteSongIV"
            android:orientation="vertical">

            <TextView
                android:id="@+id/songTextTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:ellipsize="marquee"
                android:fontFamily="@font/segoe_ui"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="1"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="2"
                android:singleLine="true"
                android:text="Song name"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/artistsNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="3dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="1"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="2"
                android:singleLine="true"
                android:text="Artist name"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/favouriteSongIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="@null"
            android:elevation="20dp"
            android:src="@drawable/ic_unfilled_heart" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/llSongNameAndArtistsName"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark" />

        <TextView
            android:id="@+id/startTimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekBar"
            android:layout_alignStart="@id/seekBar"
            android:layout_marginStart="10dp"
            android:ellipsize="none"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="1"
            android:text="00:00"
            android:textColor="@color/teal_200"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/endTimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekBar"
            android:layout_alignEnd="@id/seekBar"
            android:layout_marginEnd="10dp"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="2"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/llPlayPauseBtn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp">

            <ImageView
                android:id="@+id/skipPrevAudio"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:contentDescription="@string/backwardiv"
                android:src="@drawable/ic_noti_skip_prev"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/playPauseIV"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:contentDescription="@string/playpauseiv"
                android:src="@drawable/ic_pause" />

            <ImageView
                android:id="@+id/skipNextAudio"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:contentDescription="@string/forwardiv"
                android:src="@drawable/ic_noti_skip_next" />

        </LinearLayout>

        <ImageView
            android:id="@+id/loopOneSong"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="@null"
            android:src="@drawable/loop_songs" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shuffleSongIV"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_shuffle_disable"
            app:shapeAppearanceOverlay="@style/circular_50" />

    </RelativeLayout>

    <View
        android:id="@+id/bottomView"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>