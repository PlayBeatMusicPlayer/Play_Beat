    android:layout_height="match_parent"
    android:background="#2D3040"
    tools:context=".activity.AppThemesActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_35mdp"
                android:visibility="visible"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:id="@+id/sortAudios"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/arrowBackIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_back_arrow_ios" />

                    <TextView
                        android:id="@+id/sortAudioTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_20mdp"
                        android:text="App theme"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15font_mdp" />

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/firstRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbar"
                android:layout_marginTop="25dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:elevation="5dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="@dimen/_120mdp"
                            android:layout_height="@dimen/_260mdp"
                            android:contentDescription="@null"
                            android:scaleType="centerCrop"
                            android:src="@drawable/app_theme_default_background" />

                        <ImageView
                            android:id="@+id/checkIV1"
                            android:layout_width="@dimen/_35mdp"
                            android:layout_height="@dimen/_35mdp"
                            android:layout_centerInParent="true"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_check_circle_white" />
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

