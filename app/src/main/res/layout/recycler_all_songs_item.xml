<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlAudio"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="20dp"
    android:foreground="?attr/selectableItemBackground">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/songPosterIV"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@color/grey"
        android:scaleType="centerCrop"
        android:src="@drawable/music_note_1"
        app:shapeAppearanceOverlay="@style/circular_10" />

    <TextView
        android:id="@+id/songNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/songPosterIV"
        android:ellipsize="end"
        android:fontFamily="@font/segoe_ui"
        android:maxLines="1"
        android:text="Song Name"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/songNameTV"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/songPosterIV"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/artistNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/segoe_ui"
            android:text="Artist Name"
            android:textColor="@color/grey"
            android:textSize="13sp"
            android:textStyle="normal" />

        <View
            android:layout_width="2.5dp"
            android:layout_height="2.5dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/albumNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:ellipsize="end"
            android:fontFamily="@font/segoe_ui"
            android:maxLines="1"
            android:text="Song Name"
            android:textColor="@color/grey"
            android:textSize="13sp"
            android:textStyle="normal" />
    </LinearLayout>


</RelativeLayout>