<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlAudio"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:paddingStart="20dp"
    android:paddingTop="5dp"
    android:paddingEnd="20dp"
    android:paddingBottom="5dp">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/album_art_iv"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/little_curved_all_edges"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_audio_file_placeholder_svg"
        app:shapeAppearanceOverlay="@style/circular_15" />

    <TextView
        android:id="@+id/songNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@id/forwardIconIV"
        android:layout_toEndOf="@id/album_art_iv"
        android:ellipsize="end"
        android:fontFamily="@font/segoe_ui"
        android:maxLines="1"
        android:text="Song Name"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/songNameTV"
        android:layout_marginStart="15dp"
        android:layout_toStartOf="@id/forwardIconIV"
        android:layout_toEndOf="@id/album_art_iv"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/artistNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/segoe_ui"
            android:maxLines="1"
            android:text="Artist Name"
            android:textColor="@color/grey"
            android:textSize="13sp"
            android:textStyle="normal" />

        <View
            android:id="@+id/sepratorView"
            android:layout_width="2.5dp"
            android:layout_height="2.5dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/albumNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:ellipsize="end"
            android:fontFamily="@font/segoe_ui"
            android:maxLines="1"
            android:text="Album Name"
            android:textColor="@color/grey"
            android:textSize="13sp"
            android:textStyle="normal" />
    </LinearLayout>

    <ImageView
        android:id="@+id/forwardIconIV"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_forward"
        android:visibility="gone" />

</RelativeLayout>