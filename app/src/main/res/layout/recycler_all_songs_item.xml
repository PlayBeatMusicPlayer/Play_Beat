<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlAudio"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_theme_color"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/currentPlayingAudioIndicator"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:alpha="0.1"
        android:background="@color/teal_200"
        android:contentDescription="@null"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp">

        <RelativeLayout
            android:id="@+id/rlAlbumArtContainer"
            android:layout_width="55dp"
            android:layout_height="55dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/album_art_iv"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/little_curved_all_edges"
                android:scaleType="centerCrop"
                android:src="@drawable/artist_icon_placeholder"
                app:shapeAppearanceOverlay="@style/circular_15" />

            <RelativeLayout
                android:id="@+id/rlCurrentPlayingLottie"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:alpha="0.7"
                    android:contentDescription="@null"
                    android:src="@color/app_theme_color" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/currentPlayingAudioLottie"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    app:lottie_loop="true" />
            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/songNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:layout_toStartOf="@id/rlDragAndForwardIcons"
            android:layout_toEndOf="@id/rlAlbumArtContainer"
            android:ellipsize="end"
            android:fontFamily="@font/segoe_ui"
            android:maxLines="1"
            android:text="Song Name"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/songNameTV"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@id/rlDragAndForwardIcons"
            android:layout_toEndOf="@id/rlAlbumArtContainer"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/artistNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/segoe_ui"
                android:maxLines="1"
                android:text="Artist Name"
                android:textColor="@color/grey"
                android:textSize="13sp"
                android:textStyle="normal" />

            <View
                android:id="@+id/sepratorView"
                android:layout_width="2.5dp"
                android:layout_height="2.5dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/albumNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:ellipsize="end"
                android:fontFamily="@font/segoe_ui"
                android:maxLines="1"
                android:text="Album Name"
                android:textColor="@color/grey"
                android:textSize="13sp"
                android:textStyle="normal" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlDragAndForwardIcons"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/forwardIconIV"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@drawable/ic_forward"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/dragIconIV"
                android:layout_width="24dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@drawable/ic_drag"
                android:visibility="gone" />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>