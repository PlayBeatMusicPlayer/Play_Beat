<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/curved_top_right_top_left_app_theme_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/curved_top_right_top_left_app_theme_color"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/fredoka_semi_bold"
            android:text="What's New"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/versionNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:text="4.1.0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/roboto"
                android:text="Current version"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="New Material Design 3 support added."
            android:textColor="@color/grey"
            android:textSize="13sp"
            app:drawableStartCompat="@drawable/ic_check_circle_grey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/roboto"
            android:text="Power full search filter added. Now search results will also show albums and artists whose query matched with album or artists."
            android:textColor="@color/grey"
            android:textSize="13sp"
            app:drawableStartCompat="@drawable/ic_check_circle_grey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Expanded now playing UI improved."
            android:textColor="@color/grey"
            android:textSize="13sp"
            app:drawableStartCompat="@drawable/ic_check_circle_grey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Themes support are disabled for some bugs."
            android:textColor="@color/grey"
            android:textSize="13sp"
            app:drawableStartCompat="@drawable/ic_check_circle_grey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Fixed some known bugs on playlist page."
            android:textColor="@color/grey"
            android:textSize="13sp"
            app:drawableStartCompat="@drawable/ic_check_circle_grey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/roboto"
            android:text="Fixed: App was crashing on some devices while playing audio."
            android:textColor="@color/grey"
            android:textSize="13sp"
            app:drawableStartCompat="@drawable/ic_check_circle_grey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="From now onwards there will be minor ads on UI."
            android:textColor="@color/grey"
            android:textSize="13sp"
            app:drawableStartCompat="@drawable/ic_check_circle_grey" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp" />

</LinearLayout>