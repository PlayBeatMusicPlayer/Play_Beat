                    <View
                        android:id="@+id/sepratorView"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_below="@id/rvAlbums"
                        android:layout_marginTop="25dp"
                        android:alpha="0.5"
                        android:background="@color/card_color" />

                    <TextView
                        android:id="@+id/trackTextTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sepratorView"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/segoe_ui"
                        android:text="Tracks"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/seeAllTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sepratorView"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="?selectableItemBackgroundBorderless"
                        android:fontFamily="@font/segoe_ui"
                        android:text="SEE ALL"
                        android:textColor="@color/grey"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTracks"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:layout_below="@id/trackTextTV"
                        android:layout_marginTop="15dp"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="5"
                        tools:listitem="@layout/recycler_all_songs_item" />

                    <View
                        android:id="@+id/sepratorView1"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_below="@id/rvTracks"
                        android:layout_marginTop="10dp"
                        android:alpha="0.5"
                        android:background="#535353" />


                    <TextView
                        android:id="@+id/albumTextTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/playAll"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/segoe_ui"
                        android:text="Appears on"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvAlbums"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/albumTextTV"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="1"
                        tools:itemCount="5"
                        tools:listitem="@layout/recycler_horizontal_album_items" />

                    <!-- <ImageView
                         android:layout_width="match_parent"
