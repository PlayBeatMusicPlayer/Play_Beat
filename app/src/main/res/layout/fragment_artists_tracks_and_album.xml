<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlParentArtistAndAlbum"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_theme_color"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:focusable="true"
    android:transitionGroup="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/motionLayoutArtistAndAlbum"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="true"
        android:visibility="visible"
        app:layoutDescription="@xml/fragment_artists_tracks_and_album_v2_xml_motionlayoutplaylistaudios_scene">


        <RelativeLayout
            android:id="@+id/rlContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:background="@color/black"
                android:contentDescription="@null" />

            <ImageView
                android:id="@+id/coverArtistImage"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_artist" />

            <!--top transparent view-->
            <ImageView
                android:id="@+id/topViewIV"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:background="@drawable/gradient_background_bottom_shadow_v1"
                android:contentDescription="@null" />

            <ImageView
                android:id="@+id/bottomShadowIV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/topViewIV"
                android:background="@drawable/app_theme_background_drawable_1"
                android:contentDescription="@null" />

            <View
                android:id="@+id/titleNameTV2"
                android:layout_width="270dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="280dp" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleNameTV2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/playAll"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:text="Play"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/teal_200"
                        app:cornerRadius="20dp"
                        app:icon="@drawable/ic_play_white_circle"
                        app:iconGravity="textStart"
                        app:iconSize="30dp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/custom_ripple"
                        android:contentDescription="@null"
                        android:rotationY="180"
                        android:src="@drawable/ic_share"
                        android:visibility="gone" />


