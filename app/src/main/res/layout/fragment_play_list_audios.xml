<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:focusable="true"
    android:transitionGroup="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/motionLayoutPlayListAudios"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="true"
        android:nestedScrollingEnabled="true"
        android:visibility="visible"
        app:layoutDescription="@xml/fragment_play_list_audios_scene">

        <RelativeLayout
            android:id="@+id/rlContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/coverArtistImage"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:contentDescription="@null"
                android:scaleType="centerCrop" />

            <!--top transparent view-->
            <ImageView
                android:id="@+id/topViewIV"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:background="@drawable/gradient_background_bottom_shadow_v1"
                android:contentDescription="@null" />

            <ImageView
                android:id="@+id/bottomShadowIV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/topViewIV"
                android:background="@drawable/app_theme_background_drawable_1"
                android:contentDescription="@null" />

            <View
                android:id="@+id/titleNameTV2"
                android:layout_width="270dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="280dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/playBtn"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleNameTV2"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Play"
                android:textSize="13sp"
                android:textStyle="bold"
                app:backgroundTint="@color/teal_200"
                app:cornerRadius="20dp"
                app:icon="@drawable/ic_play_white_circle"
                app:iconGravity="textStart"
                app:iconSize="30dp" />

            <ImageView
                android:id="@+id/shareAudioIV"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/titleNameTV2"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/custom_ripple"
                android:contentDescription="@null"
                android:rotationY="180"
                android:src="@drawable/ic_share" />

            <TextView
                android:id="@+id/totalSongsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/playBtn"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="20dp"
                android:drawablePadding="5dp"
                android:fontFamily="@font/segoe_ui"
                android:textAlignment="center"
                android:textColor="@color/grey"
                android:textStyle="bold"
                tools:text="100 songs" />

            <!-- <ImageView
                 android:id="@+id/sortIV"
                 android:layout_width="30dp"
                 android:layout_height="30dp"
                 android:layout_below="@id/playBtn"
                 android:layout_marginStart="20dp"
                 android:layout_marginTop="20dp"
                 android:background="@drawable/custom_ripple"
                 android:contentDescription="@null"
                 android:src="@drawable/ic_sort"
                 android:visibility="gone" />-->

            <TextView
                android:id="@+id/sortedTextTV"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/playBtn"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:background="?selectableItemBackgroundBorderless"
                android:drawablePadding="5dp"
                android:fontFamily="@font/segoe_ui"
                android:textAlignment="center"
                android:textColor="@color/grey"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_sort"
                tools:text="Date Added" />

            <RelativeLayout
                android:id="@+id/rlContextMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/playBtn"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/closeContextMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_close" />

                <TextSwitcher
                    android:id="@+id/selectedAudiosTS"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toEndOf="@id/closeContextMenu"
                    android:animateFirstView="true"
                    tools:ignore="RelativeOverlap" />

                <ImageView
                    android:id="@+id/moreOptionIV"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_more_horizontal" />

                <CheckBox
                    android:id="@+id/selectAllAudios"
                    android:layout_width="26dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="15dp"
                    android:layout_toStartOf="@id/moreOptionIV"
                    android:background="?selectableItemBackgroundBorderless"
                    android:textColor="@color/white" />


            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_fav_songs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/totalSongsTV"
                android:layout_marginTop="15dp"
                android:nestedScrollingEnabled="true"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="10"
                tools:listitem="@layout/recycler_all_songs_item" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_last_played_audio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/totalSongsTV"
                android:layout_marginTop="15dp"
                android:nestedScrollingEnabled="true"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="10"
                tools:listitem="@layout/recycler_all_songs_item" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_history_added"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/totalSongsTV"
                android:layout_marginTop="15dp"
                android:nestedScrollingEnabled="true"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="10"
                tools:listitem="@layout/recycler_all_songs_item" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_most_played"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/totalSongsTV"
                android:layout_marginTop="15dp"
                android:nestedScrollingEnabled="true"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="10"
                tools:listitem="@layout/recycler_all_songs_item" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCustomPlaylist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/totalSongsTV"
                android:layout_marginTop="15dp"
                android:nestedScrollingEnabled="true"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="10"
                tools:listitem="@layout/recycler_all_songs_item" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/totalSongsTV"
                android:layout_marginTop="15dp"
                android:contentDescription="@null"
                android:focusable="true"
                android:foreground="@drawable/gradient_background_top_shadow"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/arrowBackIV"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/curved_all_edges_app_theme"
            android:contentDescription="@null"
            android:paddingTop="5dp"
            android:paddingEnd="2dp"
            android:paddingBottom="5dp"
            android:src="@drawable/ic_back_arrow_ios"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/artisNameTVToolbar"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="45dp"
            android:ellipsize="marquee"
            android:fontFamily="@font/segoe_ui"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Favourite Songs"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.087"
            app:layout_constraintStart_toEndOf="@id/arrowBackIV"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titleNameTV"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="280dp"
            android:fontFamily="@font/segoe_ui"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Playlist Name"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.motion.widget.MotionLayout>

    <RelativeLayout
        android:id="@+id/rlNoSongsPresent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_theme_color"
        android:visibility="gone">

        <ImageView
            android:id="@+id/arrowBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/curved_all_edges_app_theme"
            android:contentDescription="@null"
            android:paddingTop="5dp"
            android:paddingEnd="2dp"
            android:paddingBottom="5dp"
            android:src="@drawable/ic_back_arrow_ios" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_above="@id/noSongTitle"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            android:src="@drawable/music_note_icon" />

        <TextView
            android:id="@+id/noSongTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="60dp"
            android:fontFamily="@font/segoe_ui"
            android:text="No Songs Present"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/noSongDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/noSongTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/segoe_ui"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:visibility="gone" />


    </RelativeLayout>
</RelativeLayout>

