<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/curved_top_right_top_left_app_theme_color">

    <RelativeLayout
        android:id="@+id/rlToolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/queueTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/segoe_ui"
            android:text="Queue"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/queueTV"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/segoe_ui"
            android:text="Now Playing"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="normal" />

        <RelativeLayout
            android:id="@+id/rlRepeatQueue"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:background="@drawable/curved_light_transparent_bg"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/repeatQueueIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_repeat_24" />
        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlToolbar"
        android:foreground="?attr/selectableItemBackground"
        android:paddingBottom="5dp">

        <RelativeLayout
            android:id="@+id/rlAudio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@color/app_theme_color"
            android:paddingTop="5dp"
            android:paddingEnd="20dp"
            tools:ignore="RtlSymmetry">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/album_art_iv"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/little_curved_all_edges"
                android:scaleType="centerCrop"
                android:src="@drawable/artist_icon_placeholder"
                app:shapeAppearanceOverlay="@style/circular_15" />

            <TextView
                android:id="@+id/songNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toStartOf="@id/forwardIconIV"
                android:layout_toEndOf="@id/album_art_iv"
                android:ellipsize="end"
                android:fontFamily="@font/segoe_ui"
                android:maxLines="1"
                android:text="Song Name"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/songNameTV"
                android:layout_marginStart="15dp"
                android:layout_toStartOf="@id/forwardIconIV"
                android:layout_toEndOf="@id/album_art_iv"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/artistNameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/segoe_ui"
                    android:maxLines="1"
                    android:text="Artist Name"
                    android:textColor="@color/grey"
                    android:textSize="13sp"
                    android:textStyle="normal" />

                <View
                    android:id="@+id/sepratorView"
                    android:layout_width="2.5dp"
                    android:layout_height="2.5dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/albumNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/segoe_ui"
                    android:maxLines="1"
                    android:text="Album Name"
                    android:textColor="@color/grey"
                    android:textSize="13sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <ImageView
                android:id="@+id/forwardIconIV"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_forward"
                android:visibility="gone" />

        </RelativeLayout>

        <View
            android:id="@+id/horizontalView"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_below="@id/rlAudio"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/upNextTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/horizontalView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/segoe_ui"
            android:text="Up Next"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvUpNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/upNextTV"
            android:paddingTop="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/recycler_all_songs_item" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/upNextTV"
            android:background="@drawable/gradient_background_top_shadow"
            android:contentDescription="@null" />

    </RelativeLayout>


</RelativeLayout>