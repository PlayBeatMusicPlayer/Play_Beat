<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <!-- app:behaviour_peakHeight="96dp"
                app:behaviour_hideable="true"
                app:layout_behavior="@string/bottom_sheet_behavior"-->
        <RelativeLayout
            android:id="@+id/rlParentBG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <ImageView
                android:id="@+id/bottomBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/rlCoverArt"
                android:background="@drawable/app_theme_background_drawable"
                android:contentDescription="@null"
                android:visibility="visible" />

            <!-- Bottom screen black shadow-->
            <ImageView
                android:id="@+id/bottomBlackShadow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/rlCoverArt"
                android:layout_alignParentBottom="true"
                android:alpha="0.8"
                android:background="@drawable/bottom_black_shadow"
                android:contentDescription="@null" />


            <RelativeLayout
                android:id="@+id/rlCoverArt"
                android:layout_width="match_parent"
                android:layout_height="400dp">

                <ImageView
                    android:id="@+id/nowPlayingAlbumArtIV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/albumArtBottomGradient"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/gradient_background_bottom_shadow"
                    android:contentDescription="@null" />

                <ImageView
                    android:id="@+id/albumArtTopGradient"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:visibility="gone"
                    android:layout_alignTop="@id/nowPlayingAlbumArtIV"
                    android:background="@drawable/gradient_background_top_shadow"
                    android:contentDescription="@null" />

            </RelativeLayout>

            <!--toolbar-->
            <RelativeLayout
                android:id="@+id/rlToolbar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/blurImgToolbar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@null"
                    android:src="@drawable/curved_all_edges" />

                <ImageView
                    android:id="@+id/closeSheetIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_close_white" />

                <!-- <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_centerInParent="true"
                     android:fontFamily="@font/segoe_ui"
                     android:shadowDx="0.0"
                     android:shadowDy="0.0"
                     android:shadowRadius="2"
                     android:text="Now Playing"
                     android:textColor="@color/white"
                     android:textSize="17sp"
                     android:textStyle="bold" />-->

            </RelativeLayout>

            <ImageView
                android:id="@+id/likedAudioIV"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_above="@id/rlAudioControl"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="-20dp"
                android:contentDescription="@null"
                android:src="@drawable/liked_audio" />


            <RelativeLayout
                android:id="@+id/rlAudioControl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/bottomView"
                android:layout_below="@id/rlCoverArt">

                <LinearLayout
                    android:id="@+id/llSongNameAndArtistsName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="35dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/songTextTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:ellipsize="marquee"
                        android:fontFamily="@font/segoe_ui"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxLines="1"
                        android:shadowDx="0.0"
                        android:shadowDy="0.0"
                        android:shadowRadius="2"
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:text="Arijit Singh - Hawaye " />

                    <TextView
                        android:id="@+id/artistsNameTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="3dp"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxLines="1"
                        android:shadowDx="0.0"
                        android:shadowDy="0.0"
                        android:shadowRadius="2"
                        android:singleLine="true"
                        android:text="Artist name"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rlSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/llPlayPauseBtn"
                    android:layout_below="@id/llSongNameAndArtistsName"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:nestedScrollingEnabled="true">

                    <androidx.appcompat.widget.AppCompatSeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:theme="@style/ThemeOverlay.AppCompat.Dark"
                        app:bsb_bubble_color="@color/white"
                        app:bsb_bubble_text_color="@color/black"
                        app:bsb_progress="0"
                        app:bsb_second_track_color="@color/white"
                        app:bsb_show_progress_in_float="true"
                        app:bsb_track_color="@color/grey" />

                    <TextView
                        android:id="@+id/startTimeTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/seekBar"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:ellipsize="none"
                        android:fontFamily="@font/roboto_slab_bold"
                        android:gravity="center"
                        android:shadowDx="0.0"
                        android:shadowDy="0.0"
                        android:shadowRadius="1"
                        android:text="00:00"
                        android:textColor="@color/teal_200"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/endTimeTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/seekBar"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="12dp"
                        android:shadowDx="0.0"
                        android:shadowDy="0.0"
                        android:shadowRadius="2"
                        android:text="00:00"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llPlayPauseBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/loopOneSong"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_repeat_24" />


                    <ImageView
                        android:id="@+id/skipPrevAudio"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/backwardiv"
                        android:src="@drawable/avd_music_previous"
                        android:visibility="visible" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="50dp">

                        <ImageView
                            android:id="@+id/playPauseIV"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:contentDescription="@string/playpauseiv"
                            android:src="@drawable/asl_playpause" />
                    </androidx.cardview.widget.CardView>


                    <ImageView
                        android:id="@+id/skipNextAudio"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/forwardiv"
                        android:src="@drawable/avd_music_next" />

                    <ImageView
                        android:id="@+id/shuffleSongIV"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_shuffle" />

                </LinearLayout>


            </RelativeLayout>

            <View
                android:id="@+id/bottomView"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
