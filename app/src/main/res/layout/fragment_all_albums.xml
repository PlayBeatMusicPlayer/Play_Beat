<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_theme_color"
    tools:context=".fragment.AllAlbumsFragment">

    <FrameLayout
        android:id="@+id/sortAudios"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="?selectableItemBackgroundBorderless">

        <TextView
            android:id="@+id/sortAudioTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="5dp"
            android:textColor="@color/grey"
            app:drawableStartCompat="@drawable/ic_sort"
            tools:text="Name" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sortAudios"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAlbums"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="true"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="9"
            tools:listitem="@layout/recycler_all_songs_item" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:contentDescription="@null"
            android:foreground="@drawable/gradient_background_top_shadow" />
    </RelativeLayout>

    <!--<FrameLayout
        android:id="@+id/albumFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />-->
</RelativeLayout>