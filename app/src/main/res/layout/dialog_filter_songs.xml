<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_theme_color">

    <LinearLayout
        android:id="@+id/llDialogTitleAndMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialogTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_songs_by_duration"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15mdp"
            android:orientation="horizontal">

            <com.google.android.material.slider.Slider
                android:id="@+id/sliderfilterAudio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:value="20"
                android:valueFrom="0"
                android:valueTo="100"
                app:labelBehavior="gone"
                app:trackColorInactive="#B4665A8C"
                app:thumbColor="@color/white"
                app:tickVisible="false"
                app:trackColorActive="@color/teal_200" />

            <TextView
                android:id="@+id/secTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                tools:text="20 s" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llDialogTitleAndMessage"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:textColor="@color/white"
            app:rippleColor="@color/grey"
            app:strokeColor="@color/grey"
            app:strokeWidth="0.8dp" />
        <!--            android:backgroundTint="#2569696C"
        -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/positiveBtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="2.5"
            android:backgroundTint="@color/teal_200"
            android:text="@string/save" />
    </LinearLayout>

</RelativeLayout>